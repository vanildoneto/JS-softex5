primiero código:

let nota1, nota2, nota3, resultado, situação

nota1 = eval(prompt("Digite sua primeira nota:"))
nota2 = eval(prompt("Digite sua segunda nota:"))
nota3 = eval(prompt("Digite sua terceira nota:"))


resultado = (nota1+nota2+nota3)/3
situação = (resultado>= 7 ? 'aprovado' : 'reprovado')



alert(situação)

